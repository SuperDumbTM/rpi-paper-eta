{% from "macros/render_field.jinja" import render_field %}


{% extends "layout.jinja" %}
{% block title %}{{ _('nav_bookmark') }}{% endblock title %}


{% block nav %}
{% include "includes/navbar.jinja" %}
{% endblock nav %}


{% block style %}
<style>
    @media (max-width: 576px) {
        .rpc .collapse-sm {
            display: none;
        }
    }

    .rpc tbody tr.has-child td:nth-child(2)::before {
        content: "";
        margin-right: 0.5em;
        display: inline-block;
        box-sizing: border-box;
        content: "";
        border-top: 5px solid transparent;
        border-left: 10px solid rgba(0, 0, 0, 0.5);
        border-bottom: 5px solid transparent;
        border-right: 0px solid transparent;
    }

    .rpc tbody tr.rpc-expanded td:nth-child(2)::before {
        border-top: 10px solid rgba(0, 0, 0, 0.5);
        border-left: 5px solid transparent;
        border-bottom: 0px solid transparent;
        border-right: 5px solid transparent;
    }

    .rpc tbody tr.child ul {
        display: inline-block;
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    .rpc tbody tr.child ul li {
        border-bottom: 1px solid #efefef;
        padding: 0.5em 0;
    }

    .rpc tbody tr.child span.rpc-child-title {
        display: inline-block;
        min-width: 75px;
        font-weight: bold;
    }
</style>
{% endblock style %}


{% block content %}
<div class="container-xxl">
    <div class="row m-2">
        {% include "includes/flash.jinja" %}
    </div>

    <div class="row">
        <div class="col-12">
            <div class="btn-group flex-wrap">
                <a href="{{ url_for('bookmark.create') }}" class="btn btn-secondary btn-sm btn-success mx-1">
                    {{ _('create') }}
                </a>

                <div x-data>
                    <form method="POST" enctype="multipart/form-data">
                        <input type="file" name="bookmarks" class="d-none" @upload.window="$el.click()"
                            @change="$event.target.form.submit()">
                        <button type="button" class="btn btn-secondary btn-sm btn-info mx-1"
                            @click="$dispatch('upload')">
                            {{ _('import') }}
                        </button>
                    </form>
                </div>

                <a href="{{ url_for('bookmark.index') }}?action=export" class="btn btn-secondary btn-sm mx-1">
                    {{ _('export') }}
                </a>
            </div>
        </div>
    </div>

    <div class="row p-2">
        <div class="col">
            <form>
                <div class="table-responsive">
                    <table class="table table-striped" hx-get="" hx-trigger="load delay:1ms" hx-target="tbody"
                        hx-on::before-request="showLoading(150)"
                        hx-on::after-request="makeSortable(); new RpcTable('table'); hideLoading();"
                        style="min-width: 400px;">
                        <thead>
                            <tr>
                                <th class="collapse-sm">{{ _('no.') }}</th>
                                <th>{{ _('transport') }}</th>
                                <th>{{ _('route') }}</th>
                                <th>{{ _('direction') }}</th>
                                <th>{{ _('service_type') }}</th>
                                <th>{{ _('stop') }}</th>
                                <th style="min-width: 90px;">{{ _('action') }}</th>
                            </tr>
                        </thead>
                        <tbody hx-put="{{ url_for('bookmark.reorder') }}" hx-trigger="end" hx-include="closest form">
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock content %}


{% block script %}
<script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>

<script src="{{ url_for('static', filename='scripts/rpc-table.js') }}"></script>
<script>
    function makeSortable() {
        if (document.querySelectorAll("tbody input").length <= 1)
            return
        const sortable = Sortable.create(document.getElementsByTagName("tbody")[0],
            {
                items: 'tr',
                onEnd: function (event) {
                    Array
                        .from(document.querySelectorAll("tbody tr"))
                        .map((item, i) => item.dataset.id)
                },
            });
    }
</script>
{% endblock script %}