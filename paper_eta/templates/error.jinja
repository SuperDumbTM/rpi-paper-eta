{% extends "layout.jinja" %}
{% block title %}{{ _('error') }}{% endblock title %}

{% block content %}
<div class="d-flex align-items-center justify-content-center vh-100 bg-theme text-white">
    <div class="text-center">
        <h1 class="display-1 fw-bold">{{ code }}</h1>
        <p class="fs-3"> <span class="text-danger">Opps!</span> {{ error.name or 'Internal Server Error' ~ _('!')}}</p>
        <p class="lead">
            {{ msg }}
        </p>
        <a href="{{ url_for('root.index') }}" class="btn btn-primary">{{ _('go_home') }}</a>
    </div>
</div>
{% endblock content %}